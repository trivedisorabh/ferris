{
	"source": [".tmp/**/*.json"],
	"platforms": {
		"js": {
			"transformGroup": "js",
			"buildPath": "src/tokens/",
			"files": [
				{
					"destination": "all.js",
					"format": "javascript/es6"
				},
				{
					"format": "javascript/es6",
					"destination": "color.js",
					"filter": {
						"attributes": {
							"category": "color"
						}
					}
				}
			]
		}
	}
}
