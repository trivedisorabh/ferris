{
	"name": "@skf/design-systems",
	"version": "0.0.5",
	"description": "UI component monorepo",
	"license": "UNLICENSED",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"tokens:refresh": "yarn tokens:download && yarn tokens:build",
		"tokens:download": "scripts/dsm-style-download.sh",
		"tokens:build": "style-dictionary build --config ./style-dictionary.config.json",
		"build-storybook": "yarn workspace @skf/ferris-wc storybook:build",
		"chromatic": "chromatic",
		"lint": "yarn lint:eslint && yarn lint:stylelint && yarn lint:prettier",
		"lint:prettier": "prettier \"**/*.{js,ts,tsx}\" --check --ignore-path .gitignore",
		"lint:eslint": "eslint --ext .js,.ts,.tsx . --ignore-path .gitignore",
		"lint:stylelint": "stylelint \"**/*.{js,ts,tsx}\" --ignore-path .gitignore --ignore-pattern \"*.tokens.ts\"",
		"format": "yarn format:eslint && yarn format:stylelint && yarn format:prettier",
		"format:prettier": "prettier \"**/*.{js,ts,tsx}\" --write --ignore-path .gitignore",
		"format:eslint": "eslint --ext .js,.ts,.tsx . --fix --ignore-path .gitignore",
		"format:stylelint": "stylelint \"**/*.{js,ts,tsx}\" --fix --ignore-path .gitignore"
	},
	"dependencies": {
		"stylelint-no-unsupported-browser-features": "^4.1.4"
	},
	"devDependencies": {
		"@open-wc/eslint-config": "^4.3.0",
		"chromatic": "^5.7.1",
		"husky": "^4.3.8",
		"lint-staged": "^10.5.4",
		"prettier": "^2.2.1",
		"style-dictionary": "^2.10.3",
		"stylelint": "^13.13.0",
		"stylelint-config-idiomatic-order": "^8.1.0",
		"stylelint-config-standard": "^22.0.0",
		"stylelint-order": "^4.1.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"eslint --fix",
			"stylelint --fix",
			"prettier --write"
		]
	}
}
