{
	"name": "@skf/ferris",
	"version": "0.0.5",
	"description": "UI component library",
	"license": "UNLICENSED",
	"private": true,
	"scripts": {
		"build-storybook": "build-storybook",
		"build": "tsc",
		"chromatic": "chromatic",
		"format:eslint": "eslint --ext .js,.ts,.tsx . --fix --ignore-path .gitignore",
		"format:prettier": "prettier \"**/*.{js,ts,tsx}\" --write --ignore-path .gitignore",
		"format:stylelint": "stylelint \"**/*.{js,ts,tsx}\" --fix --ignore-path .gitignore",
		"format": "yarn format:eslint && yarn format:stylelint && yarn format:prettier",
		"lint:eslint": "eslint --ext .js,.ts,.tsx . --ignore-path .gitignore",
		"lint:prettier": "prettier \"**/*.{js,ts,tsx}\" --check --ignore-path .gitignore",
		"lint:stylelint": "stylelint \"**/*.{js,ts,tsx}\"",
		"lint": "yarn lint:eslint && yarn lint:stylelint && yarn lint:prettier",
		"storybook": "start-storybook",
		"tokens:build": "style-dictionary build --config ./style-dictionary.config.json",
		"tokens:download": "scripts/dsm-style-download.sh",
		"tokens:refresh": "yarn tokens:download && yarn tokens:build"
	},
	"dependencies": {
		"@emotion/react": "^11.4.0",
		"@emotion/styled": "^11.3.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2"
	},
	"devDependencies": {
		"@babel/core": "^7.14.3",
		"@storybook/addon-actions": "^6.2.9",
		"@storybook/addon-essentials": "^6.2.9",
		"@storybook/addon-links": "^6.2.9",
		"@storybook/react": "^6.2.9",
		"@typescript-eslint/eslint-plugin": "^4.24.0",
		"@typescript-eslint/parser": "^4.24.0",
		"babel-loader": "^8.2.2",
		"chromatic": "^5.7.1",
		"eslint": "^7.26.0",
		"eslint-config-prettier": "^7.2.0",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-react": "^7.23.2",
		"husky": "^4.3.8",
		"lint-staged": "^10.5.4",
		"prettier": "^2.2.1",
		"style-dictionary": "^2.10.3",
		"stylelint": "^13.13.0",
		"stylelint-config-idiomatic-order": "^8.1.0",
		"stylelint-config-standard": "^22.0.0",
		"stylelint-no-unsupported-browser-features": "^5.0.1",
		"stylelint-order": "^4.1.0",
		"tsconfig-paths-webpack-plugin": "^3.5.1",
		"typescript": "^4.2.4"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"eslint --fix",
			"stylelint --fix",
			"prettier --write"
		]
	}
}
