{
	"name": "@skf/ferris",
	"version": "0.1.1",
	"description": "The Ferris UI component library",
	"license": "UNLICENSED",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"homepage": "https://github.com/SKF/ferris",
	"repository": {
		"type": "git",
		"url": "https://github.com/SKF/ferris.git"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	},
	"scripts": {
		"build-storybook": "build-storybook",
		"build": "yarn generate:tokens && yarn generate:index && yarn format:prettier && ttsc",
		"chromatic": "chromatic",
		"dsm:download": "scripts/dsm-style-download.sh",
		"dsm:update": "yarn dsm:download && yarn generate:tokens",
		"format:eslint": "eslint --ext .js,.ts,.tsx . --fix --ignore-path .gitignore",
		"format:prettier": "prettier \"**/*.{js,ts,tsx}\" --write --ignore-path .gitignore",
		"format:stylelint": "stylelint \"**/*.{js,ts,tsx}\" --fix --ignore-path .gitignore",
		"format": "yarn format:eslint && yarn format:stylelint && yarn format:prettier",
		"generate:index": "node \"./scripts/generate-index.js\"",
		"generate:tokens": "style-dictionary build --config ./style-dictionary.config.js",
		"lint:eslint": "eslint --ext .js,.ts,.tsx . --ignore-path .gitignore",
		"lint:prettier": "prettier \"**/*.{js,ts,tsx}\" --check --ignore-path .gitignore",
		"lint:stylelint": "stylelint \"**/*.{js,ts,tsx}\"",
		"lint": "yarn lint:eslint && yarn lint:stylelint && yarn lint:prettier",
		"prepare": "husky install",
		"storybook": "start-storybook",
		"test": "jest --coverage",
		"test:watch": "jest --watch"
	},
	"dependencies": {
		"@emotion/react": "^11.4.0",
		"@emotion/styled": "^11.3.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2"
	},
	"devDependencies": {
		"@babel/core": "^7.14.3",
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-conventional": "^12.1.4",
		"@storybook/addon-actions": "^6.3.2",
		"@storybook/addon-essentials": "^6.3.2",
		"@storybook/addon-links": "^6.3.2",
		"@storybook/react": "^6.3.2",
		"@svgr/core": "^5.5.0",
		"@svgr/plugin-svgo": "^5.5.0",
		"@testing-library/dom": "^8.0.0",
		"@testing-library/react": "^11.2.7",
		"@testing-library/user-event": "^13.1.9",
		"@types/jest": "^26.0.23",
		"@types/react-dom": "^17.0.6",
		"@typescript-eslint/eslint-plugin": "^4.24.0",
		"@typescript-eslint/parser": "^4.24.0",
		"babel-loader": "^8.2.2",
		"chromatic": "^5.7.1",
		"eslint": "^7.26.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-react": "^7.23.2",
		"husky": "^6.0.0",
		"jest": "^27.0.1",
		"lint-staged": "^11.0.0",
		"prettier": "^2.2.1",
		"style-dictionary": "^3.0.0",
		"stylelint": "^13.13.0",
		"stylelint-config-standard": "^22.0.0",
		"stylelint-no-unsupported-browser-features": "^5.0.1",
		"stylelint-order": "^4.1.0",
		"ts-jest": "^27.0.1",
		"tsconfig-paths-webpack-plugin": "^3.5.1",
		"ttypescript": "^1.5.12",
		"typescript": "4.2.4",
		"typescript-transform-paths": "^3.0.1"
	},
	"lint-staged": {
		"*.{js,ts,tsx}": [
			"eslint --fix",
			"stylelint --fix",
			"prettier --write"
		]
	}
}
